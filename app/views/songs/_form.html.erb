<%= form_for @song do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, placeholder: "Song title", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Composer</label>
    <%= f.text_field :composer, placeholder: "Composer", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Album</label>
    <%= f.text_field :album, placeholder: "Album", class: "form-control" %>
  </div>

    <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
